<%- include ('../partials/header') %>
    <%- include ('../partials/categories-navbar')%>
        <div class="container">
            <div class="row mt-3 m-auto">
                <div class="col-md-12 m-auto">
                    <% if(successMsg){ %>
                        <div id="success" class="alert alert-success">
                            <%= successMsg %>
                        </div>
                        <% } else { %>
                            <div class="alert alert-success d-none" id="success"></div>
                            <% } %>
                </div>

                <div class="col-md-12 m-auto">
                    <% if(errorMsg){ %>
                        <div id="error" class="alert alert-danger">
                            <%= errorMsg %>
                        </div>
                        <% } else { %>
                            <div id="error" class="alert alert-danger d-none"></div>
                            <% } %>
                </div>
            </div>
            <!-- Product infomation -->
            <div class="row mt-4 mb-4">
                <div class="col-md-5 mt-2 mr-2 ml-auto">
                    <img src="<%= product.imagePath %>" class="img-fluid product-img" alt="product image" />
                </div>
                <div class="col-md-5 mt-2 mb-2 ml-2 mr-auto text-dark">
                    <h2>
                        <%= product.title %>
                    </h2>
                    <hr />
                    <p class="price">VND <%=product.price %>
                    </p>
                    <p class="lead">Mô tả:
                    <p>
                        <%= product.description %>
                    </p>
                    </p>

                    <p><strong>Caterogy:</strong>
                        <%= product.category.title %>
                    </p>
                    <p><strong>Brand:</strong>
                        <%= product.manufacturer %>
                    </p>
                    <p><strong>Product Code:</strong>
                        <%= product.productCode %>
                    </p>
                    <p><strong>Date added:</strong>
                        <%= moment(product.createdAt).format('MMM Do YYY') %>
                    </p>

                    <% if(product.available){ %>
                        <p class="is-available text-center">Còn sẵn</p>
                        <a href="/add-to-cart/<%= product._id %> "
                            class="btn btn-block btn-secondary mt-3 mb-3 button-style">Add to Cart</a>
                        <% } else { %>
                            <p class="is-not-available text-center">SOLD OUT</p>
                            <% } %>
                </div>
            </div>
        </div>
        <%- include ('../partials/footer') %>