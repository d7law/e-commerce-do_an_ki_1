<%- include ('../partials/header') %> <%- include ('../partials/categories-navbar')%>
<!-- Carousel -->

<div class="carousel slide mb-3 mt-0 pt-0" id="topCarousel" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#topCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#topCarousel" data-slide-to="1"></li>
        <li data-target="#topCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="/images/slide1.jpg" alt="First slide" />
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="/images/slide2.jpg" alt="Second slide" />
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="/images/slide3.jpg" alt="Third slide" />
        </div>
    </div>
    <a class="carousel-control-prev" href="#topCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#topCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<!-- Store's Caterogy -->
<div class="container">
    <h3 class="text-center mb-3 mt-4">Categories</h3>
    <% if(categories){ %>
    <div class="row text-center m-auto">
        <% for(let i=0;i<3;i++){ %>
        <div class="col-lg-3 col-md-3 col-sm-12 text-center ml-2">
            <a class="title-link" href="/products/<%= categories[i].slug %>">
                <img src="images/<%=i %> " alt="category" class="circle-img" />
                <h4 class="mb-3 mt-3"><%=categories[i].title %></h4>
            </a>
        </div>

        <% } %>
        <div class="col-lg-1 col-md-1 col-sm-12 text-center mx-auto">
            <a href="/products">
                <li class="fa fa-chevron-circle-right" aria-hidden="true"></li>
            </a>
        </div>
    </div>
    <% } %>
</div>

<hr class="gradient-style" />

<!-- lastest products slider -->
<div class="container mb-4 mt-4">
    <!-- Carousel Wrapper -->
    <div id="products-carousel" class="carousel slide carousel-multi-item" data-ride="carousel">
        <!-- control -->
        <div class="controls-top mb-2">
            <div class="row">
                <div class="col-8">
                    <h3>Lastest Products</h3>
                </div>
                <div class="col-4">
                    <div class="controls float-right hidden-xs">
                        <a href="#products-carousel" class="left fa fa-chevron-left btn btn" data-slide="prev"></a>
                        <a href="#products-carousel" class="right fa fa-chevron-right btn" data-slide="next"></a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Slides -->
        <div class="carousel-inner" role="listbox">
            <!-- Slide 1 -->
            <div class="carousel-item active">
                <div class="row">
                    <% for(let i=0;i<3;i++){ %>
                    <div class="col-md-4 product-index-box">
                        <div class="single-product d-flex flex-column h-100">
                            <a
                                href="/products/<%= products[i].category.slug%>/<%= products[i]._id %>  "
                                class="title-link"
                            >
                                <img src="<%= products[i].imagePath %> " alt="Shoes 1" class="img-fluid" />
                            </a>
                            <div class="product-info">
                                <a
                                    href="/products/<%= product[i].category.slug %>/<%= products[i]._id %>"
                                    class="title-link"
                                >
                                    <h6 class="mt-2 mb-2"><%= products[i].title %></h6>
                                </a>
                                <div class="price">VND<%= products[i].price %></div>
                            </div>
                            <% if(products[i].available){ %>
                            <a
                                href="/add-to-cart/<%= products[i]._id %> "
                                class="btn btn-lock btn-secondary button-style mt-auto mb-2"
                                >Add to Cart</a
                            >
                            <% } else { %>
                            <a href="#" class="btn btn-lock btn-danger button-style-danger mt-2 mb-2">SOLD OUT</a>
                            <% } %>
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>
            <!-- Silde 2 -->
            <div class="carousel-item">
                <div class="row">
                    <% for(let i=3; i<6; i++) { %>
                    <div class="col-md-4 product-index-box">
                        <div class="single-product d-flex flex-column h-100">
                            <a class="title-link" href="/products/<%=products[i].category.slug%>/<%=products[i]._id%>">
                                <img src="<%= products[i].imagePath %>" alt="Bag" class="img-fluid"
                            /></a>
                            <div class="product-info">
                                <a
                                    class="title-link"
                                    href="/products/<%=products[i].category.slug%>/<%=products[i]._id%>"
                                >
                                    <h6 class="mt-2 mb-2"><%= products[i].title %></h6>
                                </a>
                                <div class="price">$<%= products[i].price %></div>
                            </div>
                            <% if(products[i].available) {%>
                            <a
                                href="/add-to-cart/<%=products[i]._id%>"
                                class="btn btn-block btn-secondary button-style mt-auto mb-2"
                            >
                                Add to Cart
                            </a>
                            <% } else { %>
                            <a href="#" class="btn btn-block btn-danger button-style-danger mt-2 mb-2"> SOLD OUT </a>
                            <%} %>
                        </div>
                    </div>
                    <%}%>
                </div>
            </div>
            <!-- Slide 3 -->
            <div class="carousel-item">
                <div class="row">
                    <% for(let i=6; i<9; i++) { %>
                    <div class="col-md-4 product-index-box">
                        <div class="single-product d-flex flex-column h-100">
                            <a class="title-link" href="/products/<%=products[i].category.slug%>/<%=products[i]._id%>">
                                <img src="<%= products[i].imagePath %>" alt="Bag" class="img-fluid"
                            /></a>
                            <div class="product-info">
                                <a
                                    class="title-link"
                                    href="/products/<%=products[i].category.slug%>/<%=products[i]._id%>"
                                >
                                    <h6 class="mt-2 mb-2"><%= products[i].title %></h6>
                                </a>
                                <div class="price">$<%= products[i].price %></div>
                            </div>
                            <% if(products[i].available) {%>
                            <a
                                href="/add-to-cart/<%=products[i]._id%>"
                                class="btn btn-block btn-secondary button-style mt-auto mb-2"
                            >
                                Add to Cart
                            </a>
                            <% } else { %>
                            <a href="#" class="btn btn-block btn-danger button-style-danger mt-2 mb-2"> SOLD OUT </a>
                            <%} %>
                        </div>
                    </div>
                    <%}%>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include ('../partials/footer') %>
